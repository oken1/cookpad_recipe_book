{
	"manifest_version": 2,
	"name": "COOKPAD Recipe Book",
	"version": "1.0",
	"description": "__MSG_manifest_description__",
	"default_locale": "en",
	"content_security_policy": "script-src 'self'; object-src 'self'",

	"minimum_chrome_version": "20.0",

	"browser_action": {
		"default_icon": "images/icon128.png",
		"default_title": "COOKPAD Recipe Book",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["http://cookpad.com/recipe/*", "https://en.cookpad.com/recipe/*"],
			"js": ["js/lib/jquery.js", "js/util.js", "js/content.js"]
		}
	],

	"icons": {
		"16": "images/icon128.png",
		"32": "images/icon128.png",
		"48": "images/icon128.png",
		"128": "images/icon128.png"
	},

	"background" : {
		"scripts": ["js/lib/jquery.js", "js/util.js", "js/background.js"]
	},

	"permissions": [
		"notifications",
		"tabs"
	]
}
